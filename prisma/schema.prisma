generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
  email    String  @unique
  role     String  @default("admin") // Role field to differentiate users
  createdAt DateTime @default(now())
}

model Blog {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  image     String?
  video     String?  // Menyimpan URL atau path ke video (dapat null jika tidak ada video)
  date      String?
  createdAt DateTime @default(now())
}

model Image {
  id           Int      @id @default(autoincrement())
  filename     String
  originalName String
  size         Int
  path         String
  createdAt    DateTime @default(now())
}
